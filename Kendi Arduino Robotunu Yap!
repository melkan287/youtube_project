#include <Servo.h>
#include <IRremote.h>

Servo servo1;  // Sağ
Servo servo2;  // Sol


int RECV_PIN = 2;
IRrecv irrecv(RECV_PIN);
decode_results results;

#define LER    0xFF18E7 // ileri
#define GER    0xFF4AB5 // geri
#define SAG    0xFF5AA5 // sağ
#define SOL    0xFF10EF // sol

void setup() {
  Serial.begin(9600);
  irrecv.enableIRIn();

  servo1.attach(9);  // sağ
  servo2.attach(10);  // sol

  // Hepsi başlangıçta durmalı
  servo1.write(90);
  servo2.write(90);
}

void loop() {
  if (irrecv.decode(&results)) {
    unsigned long code = results.value;
    Serial.print("Kod: 0x"); Serial.println(code, HEX);

    // Servo1: sağ-sol
    if (code == SAG) {
      Serial.println("SAĞ");
      servo1.write(120);
      servo2.write(120);
    } else if (code ==SOL) {
      Serial.println("SOL");
      servo1.write(60);
      servo2.write(60);
    }

    // Servo2: ileri-geri
    else if (code == GER) {
      Serial.println("geri");
      servo2.write(60);
      servo1.write(120);
    } else if (code == LER) {
      Serial.println("ileri");
      servo1.write(60);
      servo2.write(120);
    }

  
    
    

    // Diğer tüm durumlarda durdur
    else {
      servo1.write(90);
      servo2.write(90);
    }

    irrecv.resume();
    delay(150);  // Tuş tekrarı önlemek için
  }
}
